ALTER TABLE investigator ADD COLUMN isAdmin TinyInt(1)
ALTER TABLE investigator drop column  Photo
create table Config(
Id int NOT NULL primary key AUTO_INCREMENT,
DefaultPsw varchar(50)
)

insert into Config (DefaultPsw) values ('roque')

create table Publication (
Id int NOT NULL primary key AUTO_INCREMENT,
IdUser int not null,
Title varchar(300),
Resume_ TEXT,
Url varchar(200),
Date_ DATE not null,
CONSTRAINT fk_user_publication FOREIGN KEY (IdUser) REFERENCES Investigator(Id)
)

